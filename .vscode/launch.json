    "version": "0.2.0",
    "configurations": [
        {
            "name": "Serve",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}/.koksmat/app",
            "program": "${workspaceFolder}/.koksmat/app",
            "args": ["health","ping","pong"]
        }, 
        {
            "name": "Microservice",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}/.koksmat/app",
            "program": "${workspaceFolder}/.koksmat/app",
            "args": ["service"]
        }, 
        {
            "name": "app db init",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}/.koksmat/app",
            "program": "${workspaceFolder}/.koksmat/app",
            "args": ["db","init"]
        }, 

        {
            "name": "Web",
            "type": "node-terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}/.koksmat/web",
            "command": "npm run dev"
          },
    ]
}